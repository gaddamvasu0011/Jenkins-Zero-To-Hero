pipeline {
    agent {
        docker {
            image 'ghcr.io/iam-veeramalla/jenkins-maven-docker-trivy:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        timeout(time: 30, unit: 'MINUTES')
        retry(1)
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'qa'], description: 'Target environment')
    }

    environment {
        APP_NAME = "spring-boot-app"
        ECR_REPO = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${APP_NAME}"
        SONAR_URL = "http://65.2.128.84:9000"
        MAVEN_OPTS = "-Dmaven.repo.local=.m2/repository"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    GIT_COMMIT_SHORT = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
                }
            }
        }

        stage('Build & Unit Test') {
            steps {
                sh '''
                  cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                  mvn clean verify
                '''
            }
        }

        stage('Static Code Analysis - SonarQube') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_TOKEN')]) {
                    sh '''
                      cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                      mvn sonar:sonar \
                      -Dsonar.login=$SONAR_TOKEN \
                      -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Docker Image') {
            environment {
                IMAGE_TAG = "${BUILD_NUMBER}-${GIT_COMMIT_SHORT}"
            }
            steps {
                sh '''
                  cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                  docker build -t ${ECR_REPO}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Image Security Scan (Trivy)') {
            steps {
                sh '''
                  trivy image --exit-code 0 --severity LOW,MEDIUM ${DOCKER_REPO}:${IMAGE_TAG}
                  trivy image --exit-code 1 --severity HIGH,CRITICAL ${DOCKER_REPO}:${IMAGE_TAG}
                '''
            }
        }

        stage('Push Docker Image to ECR') {
    steps {
        script {

            awsAccountId = "149536483305"
            awsRegion    = "ap-south-1"
            ecrRepo      = "spring-boot-app"

            ecrRegistry = "${awsAccountId}.dkr.ecr.${awsRegion}.amazonaws.com"

            docker.withRegistry(
                "https://${ecrRegistry}",
                "aws-ecr-credentials"
            ) {
                docker.image("${ecrRegistry}/${ecrRepo}:${IMAGE_TAG}").push()
            }
        }
    }
}

        stage('Update GitOps Manifests') {
            when {
                expression { params.ENVIRONMENT == 'dev' }
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                      git config user.name "CI Bot"
                      git config user.email "ci@company.com"

                     sed -i "s|image:.*|image: ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${APP_NAME}:${IMAGE_TAG}|g" \
                     java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

                      git add .
                      git commit -m "Deploy ${APP_NAME} ${IMAGE_TAG} to ${ENVIRONMENT}"
                      git push https://${GITHUB_TOKEN}@github.com/iam-veeramalla/Jenkins-Zero-To-Hero.git HEAD:main
                    '''
                }
            }
        }

        stage('Manual Approval for QA') {
            when {
                expression { params.ENVIRONMENT == 'qa' }
            }
            steps {
                input message: "Approve deployment to QA?", ok: "Deploy"
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline successful - Image deployed via GitOps"
        }
        failure {
            echo "❌ Pipeline failed - Investigate logs"
        }
        always {
            cleanWs()
        }
    }
}
